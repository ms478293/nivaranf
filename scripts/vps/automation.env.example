# Copy to /etc/nivaran/automation.env on VPS and set real values.

# Required for AI generation
GEMINI_API_KEY=replace_with_real_key

# Optional but recommended notifications
GLOBAL_NEWS_DISCORD_WEBHOOK_URL=
DISCORD_WEBHOOK_URL=
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Runtime controls
GLOBAL_NEWS_FEED_TIMEOUT_SECONDS=15
GLOBAL_NEWS_FEED_RETRIES=2
GLOBAL_NEWS_HEARTBEAT_SECONDS=20
GLOBAL_NEWS_RUN_TIMEOUT_SECONDS=3600
NEPAL_NEWS_RUN_TIMEOUT_SECONDS=5400
AUTOMATION_LOG_DIR=/var/log/nivaran-automation

# Keep publisher writing absolute site URLs
NEXT_PUBLIC_APP_URL=https://www.nivaranfoundation.org

# Optional: supabase only if your app runtime needs it for some pages
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE_KEY=
